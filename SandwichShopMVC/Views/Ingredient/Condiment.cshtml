@model IEnumerable<SandwichShopMVC.Models.Ingredients>

@{
    ViewBag.Title = "Index";
}

<h2>Inventory</h2>

<div data-role="header">
    <div data-role="navbar">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("All", "Index", "Ingredient")</li>
            <li>@Html.ActionLink("Bread", "Bread", "Ingredient")</li>
            <li>@Html.ActionLink("Protein", "Protein", "Ingredient")</li>
            <li>@Html.ActionLink("Dairy", "Dairy", "Ingredient")</li>
            <li>@Html.ActionLink("Produce", "Produce", "Ingredient")</li>
            <li>@Html.ActionLink("Beverage", "Beverage", "Ingredient")</li>
            <li class="highLight">@Html.ActionLink("Condiment", "Condiment", "Ingredient")</li>
            <li>@Html.ActionLink("Side", "Side", "Ingredient")</li>
        </ul>
    </div>
</div>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            Update
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Category.ToString() == "Condiment")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }
</table>


<a class="btn btn-default" @Html.ActionLink("Add", "Create")></a>
<a class="btn btn-default" @Html.ActionLink("Update Sales", "Index", "Inventory")></a>